mixin pagination(pages, currentpage)
  div.mt-6.grow.flex.justify-center
    ul.flex.flex-row.gap-4.w-fit.self-end
      li
        if(currentpage === "1")
          p.currentpage 1
        else
          a.underline(href="/") 1
      - for(let i = 2; i <= pages; i++)
          - const pagelink = "/messageboard/page" + i
          li
            if(Number(currentpage) === i)
              p.currentpage #{i}
            else
              a.underline(href=pagelink) #{i}
